<Page x:Class="LaborProtection.Desktop.Pages.Calculations.CalculationAreaPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:limitations="clr-namespace:LaborProtection.Calculation.Constants;assembly=LaborProtection.Calculation"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CalculationAreaPage">

    <Grid ShowGridLines="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            
            <Grid Background="White" Grid.Row="0" ShowGridLines="True">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Bottom">Width</Label>
                <TextBox Grid.Row="1" Grid.Column="0" Margin="5"></TextBox>

                <Label Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Bottom">Length</Label>
                <TextBox Grid.Row="1" Grid.Column="1" Margin="5"></TextBox>

                <Label Grid.Row="0" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Bottom">Height</Label>
                <TextBox Grid.Row="1" Grid.Column="2" Margin="5"></TextBox>

                <Label Grid.Row="2" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Bottom">Floor reflection</Label>
                <ComboBox Grid.Row="3" Grid.Column="0" Margin="5"></ComboBox>

                <Label Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Bottom">Wall reflection</Label>
                <ComboBox Grid.Row="3" Grid.Column="1" Margin="5"></ComboBox>

                <Label Grid.Row="2" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Bottom">Ceilling reflection</Label>
                <ComboBox Grid.Row="3" Grid.Column="2" Margin="5"></ComboBox>
            </Grid>

            <Grid Background="white" Grid.Row="1" ShowGridLines="True">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" ShowGridLines="True">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0">Table width (Santimetters)</Label>
                    <Slider Grid.Row="1" Margin="10, 0, 10, 0" 
                            Minimum="{x:Static limitations:Limitations.MINIMUM_TABLE_WIDTH}" 
                            Maximum="{x:Static limitations:Limitations.MAXIMUM_TABLE_WIDTH}"
                            AutoToolTipPlacement="TopLeft"
                            TickPlacement="Both"/>

                    <Label Grid.Row="2">Table length  (Santimetters)</Label>
                    <Slider Grid.Row="1" Margin="10, 0, 10, 0" 
                            Minimum="{x:Static limitations:Limitations.MINIMUM_TABLE_LENGTH}" 
                            Maximum="{x:Static limitations:Limitations.MAXIMUM_TABLE_LENGTH}"
                            AutoToolTipPlacement="TopLeft"
                            TickPlacement="Both"/>
                </Grid>

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>

                        <Label Grid.Row="0">Lamp</Label>
                        <ComboBox Grid.Row="1" Margin="5"></ComboBox>
                        <Button Grid.Row="2" Margin="5" IsEnabled="False" >More information</Button>

                        <Label Grid.Row="3">Bulb</Label>
                        <ComboBox Grid.Row="4" Margin="5"></ComboBox>
                        <Button Grid.Row="5" Margin="5" IsEnabled="False">More information</Button>
                    </Grid>

                    <Image Grid.Column="1" Grid.ColumnSpan="2" Margin="5" />
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Page>

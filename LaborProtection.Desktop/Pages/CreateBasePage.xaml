<Page x:Class="LaborProtection.Desktop.Pages.CreateBasePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LaborProtection.Desktop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="800"
      Title="CreateBulbPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="9*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Margin="5" FontSize="23" FontFamily="Arial" Grid.Column="1" HorizontalAlignment="Center" Width="160" Height="40" Click="Button_Click">
                Lamp
            </Button>
            <Button Margin="5" FontSize="23" FontFamily="Arial" Grid.Column="1" HorizontalAlignment="Center" Width="160" Height="40" Click="Button_Click_1">
                Bulb
            </Button>
        </StackPanel>

        <Grid Grid.Row="1" Height="auto"  >
            <Frame x:Name="createFrame" />
        </Grid>
    </Grid>
</Page>

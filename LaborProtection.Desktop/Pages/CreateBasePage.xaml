<Page x:Class="LaborProtection.Desktop.Pages.CreateBasePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:common="clr-namespace:LaborProtection.Common;assembly=LaborProtection.Common"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="800"
      Title="CreateBulbPage">

    <Grid ShowGridLines="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="9*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Width="auto" Height="auto">
            <StackPanel Grid.Column="0" Orientation="Vertical" HorizontalAlignment="Left">
                <RadioButton Margin="10" Checked="RadioButton_Checked_1" Content="{x:Static common:UILabels.CREATE_LAMP}"></RadioButton>
                <RadioButton Margin="10" Checked="RadioButton_Checked" Content="{x:Static common:UILabels.CREATE_BULB}"></RadioButton>
            </StackPanel>
        </Grid>

        <Grid Grid.Column="1" Height="auto"  >
            <Frame x:Name="createFrame" />
        </Grid>
    </Grid>
</Page>

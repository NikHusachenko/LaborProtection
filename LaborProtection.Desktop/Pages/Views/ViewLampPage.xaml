<Page x:Class="LaborProtection.Desktop.Pages.ViewLampPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LaborProtection.Desktop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ViewLampPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="1" Name="lampViewContainer">
            <ScrollViewer VerticalScrollBarVisibility="Hidden">
                <WrapPanel Name="lampViewPanel" Width="auto" VerticalAlignment="Top" HorizontalAlignment="Stretch" Loaded="lampViewPanel_Loaded"></WrapPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>

<Page x:Class="LaborProtection.Desktop.Pages.ViewBasePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:common="clr-namespace:LaborProtection.Common;assembly=LaborProtection.Common"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ViewBasePage">

    <Grid ShowGridLines="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="9*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
                <RadioButton Margin="10" Checked="RadioButton_Checked_1" Content="{x:Static common:UILabels.VIEW_LAMPS}"></RadioButton>
                <RadioButton Margin="10" Checked="RadioButton_Checked" Content="{x:Static common:UILabels.VIEW_BUBLS}"></RadioButton>
            </StackPanel>
        </Grid>

        <Grid Grid.Column="1">
            <Frame x:Name="viewFrame" />
        </Grid>
    </Grid>
</Page>

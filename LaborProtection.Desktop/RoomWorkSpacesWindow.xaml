<Window x:Class="LaborProtection.Desktop.RoomWorkSpacesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LaborProtection.Desktop"
        mc:Ignorable="d"
        Title="RoomWorkSpacesWindow" Height="800" Width="1230">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Border BorderBrush="Black" BorderThickness="1" Grid.Row="0">
            <Canvas
                Width="800"
               x:Name="CanvasGrid"
                Height="400"
                Background="White" >
            </Canvas>
        </Border>
        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center">
            <Button x:Name="IncreaseSizeButton" Height="45" Width="110" Margin="0 0 20 0" FontSize="30" FontWeight="Bold" Click="IncreaseSizeButton_Click">-</Button>
            <Button x:Name="DecreaseSizeButton" Height="45" Width="110" Margin="20 0 0 0" FontSize="30" FontWeight="Bold" Click="DecreaseSizeButton_Click">+</Button>
        </StackPanel>
    </Grid>
</Window>
